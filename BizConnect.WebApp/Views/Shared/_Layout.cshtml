<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("/Content/DataTables-1.9.1/media/css/jquery.dataTables.css")" rel="stylesheet" type="text/css" />
    @RenderSection("styles", false)
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h1>BizConnect</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </nav>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <section id="scripts">
            <script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>
            <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
            <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
            <script src="@Url.Content("~/Scripts/DataTables-1.9.1/media/js/jquery.dataTables.min.js")" type="text/javascript"> </script>
            <script type="text/javascript">
                $(function () {
                    $('#index').dataTable({
                        "bPaginate": true,
                        "bLengthChange": true,
                        "bFilter": true,
                        "bSort": true,
                        "bInfo": false,
                        "bAutoWidth": false
                    });
                });

                // Credit: Rick Strahl -- http://www.west-wind.com/weblog/posts/2008/Oct/21/Making-Element-Position-Absolute-with-jQuery
                $.fn.makeAbsolute = function () {
                    return this.each(function () {

                        var el = $(this);

                        var pos = el.position();

                        el.css({
                            position: "absolute",

                            marginLeft: 0,
                            marginTop: 0,

                            top: pos.top,
                            left: pos.left
                        });
                    });

                };

            </script>

            @RenderSection("scripts", false)

        </section>
        <footer>
        </footer>
    </div>
</body>
</html>
