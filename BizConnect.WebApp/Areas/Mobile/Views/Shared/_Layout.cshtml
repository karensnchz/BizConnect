<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    @*<meta name="viewport" content="width=device-width, initial-scale=1">*@ 
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Areas/Mobile/Content/themes/base/minified/jquery.mobile.structure-1.0.1.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Areas/Mobile/Content/themes/base/minified/jquery.mobile-1.0.1.min.css")" rel="stylesheet" type="text/css" />
    @RenderSection("styles", false)
</head>
<body>
    <div data-role="page">
        <header data-role="header">
            <h1>My MVC Application</h1>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <nav data-role="navbar">
            <ul data-role="listview">
                <li data-icon="home">@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
            </ul>
            </nav>
        </header>
        <section data-role="content">
            @RenderBody()
        </section>
        <section id="scripts">
            <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
            <script src="@Url.Content("~/Scripts/modernizr-2.0.6-development-only.js")" type="text/javascript"></script>
            <script src="@Url.Content("~/Areas/Mobile/Scripts/jquery.mobile-1.0.1.min.js")" type="text/javascript"></script>
            @RenderSection("scripts", false)
        </section>
        <footer data-role="footer">
        </footer>
    </div>
</body>
</html>
